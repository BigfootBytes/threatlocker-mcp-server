# Transport mode: stdio (default) or http
TRANSPORT=stdio

# HTTP mode settings (ignored in stdio mode)
PORT=8080

# Stdio mode credentials (ignored in http mode - credentials passed per-request)
THREATLOCKER_API_KEY=your-api-key-here
THREATLOCKER_BASE_URL=https://portalapi.INSTANCE.threatlocker.com/portalapi
THREATLOCKER_ORG_ID=optional-org-guid

# Logging (all modes)
LOG_LEVEL=INFO                  # ERROR, INFO, or DEBUG

# HTTP mode security
ALLOWED_ORIGINS=                # Comma-separated allowed CORS origins (empty = reject browser requests)

# API resilience
THREATLOCKER_MAX_RETRIES=1      # Retry count for transient API failures (408, 429, etc.)
